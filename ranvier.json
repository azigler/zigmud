{
  "port": 4334,
  "bundles": [
    "ranvier-datasource-couchdb",
    "ranvier-tracery",
    "ranvier-webhooks",
    "ranvier-zpanel",
    "redacted-debug",
    "telnet-networking",
    "zig-base",
    "zig-combat"
  ],
  "startingRoom": "starting-temple:spawn",
  "diagonalDirections": false,
  "minAccountNameLength": 3,
  "maxAccountNameLength": 20,
  "minPlayerNameLength": 3,
  "maxPlayerNameLength": 20,
  "maxCharacters": 100,
  "defaultMaxPlayerInventory": 16,
  "entityTickFrequency": 100,
  "playerTickFrequency": 100,
  "logfile": false,
  "logLevel": "debug",
  "webhooks": {
    "github": {
      "port": 8586,
      "url": "https://www.github.com/azigler/zigmud",
      "branch": "master",
      "command": "pm2 restart zigmud",
      "path": "~/zigmud",
      "link": true
    }
  },
  "zPanel": {
    "port": 4335,
    "url": "localhost"
  },
  "dataSources": {
    "Yaml": {
      "require": "ranvier-datasource-file.YamlDataSource"
    },
    "CouchDb": {
      "require": "./bundles/ranvier-datasource-couchdb/CouchDbDataSource.js"
    }
  },
  "entityLoaders": {
    "accounts": {
      "source": "CouchDb",
      "config": {
        "namespace": "zmdev_",
        "db": "account"
      }
    },
    "players": {
      "source": "CouchDb",
      "config": {
        "namespace": "zmdev_",
        "db": "player"
      }
    },
    "areas": {
      "source": "CouchDb",
      "config": {
        "namespace": "zmdev_",
        "db": "area"
      }
    },
    "npcs": {
      "source": "CouchDb",
      "config": {
        "namespace": "zmdev_",
        "db": "npc"
      }
    },
    "items": {
      "source": "CouchDb",
      "config": {
        "namespace": "zmdev_",
        "db": "item"
      }
    },
    "rooms": {
      "source": "CouchDb",
      "config": {
        "namespace": "zmdev_",
        "db": "room"
      }
    },
    "quests": {
      "source": "Yaml",
      "config": {
        "path": "bundles/[BUNDLE]/areas/[AREA]/quests.yml"
      }
    },
    "help": {
      "source": "CouchDb",
      "config": {
        "namespace": "zmdev_",
        "db": "help"
      }
    }
  }
}
